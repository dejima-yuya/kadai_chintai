<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.price %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @property.note %>
</p>

<hr>

<% count = 0 %>
<% @closest_stations.each do |closest_station| %>
  <% if @property.closest_stations.any? %>
  <h2>最寄り駅<%= count += 1 %></h2>
  <p><strong>路線名:</strong> <%= closest_station.route_name %></p>
  <p><strong>駅名:</strong> <%= closest_station.station_name %></p>
  <p><strong>徒歩分数:</strong> <%= closest_station.duration %></p>
  <% end %>
<% end %>

<p><%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %></p>
